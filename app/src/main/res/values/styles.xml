<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="GalleryTabTextAppearance" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/gallery_tab_text_size</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="GalleryItemTitleStyle" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">@dimen/gallery_item_title_size</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="GalleryItemCountStyle" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textSize">@dimen/gallery_item_count_size</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="GalleryPageTitleStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/gallery_page_title_size</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="GalleryEmptyMessageStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/gallery_empty_message_size</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="GalleryOverlayMessageStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/gallery_empty_message_size</item>
        <item name="android:textColor">@color/text_on_overlay</item>
    </style>
</resources>
