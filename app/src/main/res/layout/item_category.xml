<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:minHeight="@dimen/gallery_item_min_height"
    android:orientation="horizontal"
    android:padding="@dimen/gallery_item_padding">

    <ImageView
        android:id="@+id/cover_image"
        android:layout_width="@dimen/gallery_cover_size"
        android:layout_height="@dimen/gallery_cover_size"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/gallery_item_content_margin"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/GalleryItemTitleStyle" />

        <TextView
            android:id="@+id/category_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/GalleryItemCountStyle" />
    </LinearLayout>

</LinearLayout>
