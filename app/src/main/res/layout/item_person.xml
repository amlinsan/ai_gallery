<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:minHeight="@dimen/gallery_item_min_height"
    android:orientation="horizontal"
    android:padding="@dimen/gallery_item_padding">

    <ImageView
        android:id="@+id/person_cover"
        android:layout_width="@dimen/gallery_cover_size"
        android:layout_height="@dimen/gallery_cover_size"
        android:scaleType="centerCrop"
        android:contentDescription="@null" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/gallery_item_content_margin"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/name_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/person_name"
                style="@style/GalleryItemTitleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:maxWidth="@dimen/person_item_name_max_width" />

            <ImageView
                android:id="@+id/btn_edit_name"
                android:layout_width="@dimen/icon_size_small"
                android:layout_height="@dimen/icon_size_small"
                android:layout_marginStart="@dimen/spacing_s"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="false"
                android:contentDescription="@string/action_edit"
                android:focusable="false"
                android:padding="@dimen/spacing_xs"
                android:src="@drawable/ic_edit"
                app:tint="@color/text_primary" />
        </LinearLayout>

        <TextView
            android:id="@+id/person_count"
            style="@style/GalleryItemCountStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
